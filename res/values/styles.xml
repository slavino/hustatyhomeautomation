<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style value="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style value="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <color value="black">#00000000</color>

    <style value="TemperatureMainScreen">
        <item value="android:textColor">@color/black</item>
        <item value="android:textSize">@dimen/tempMainActivityFontSize</item>
    </style>

    <style value="RoomNameMainScreen">
        <item value="android:textColor">@color/black</item>
        <item value="android:textSize">@dimen/roomNameMainActivityFontSize</item>
    </style>

</resources>