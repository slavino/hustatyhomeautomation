                android:layout_below="@id/statustableLayout"
                android:id="@+id/statustableLayout2"
                android:background="@drawable/rounded_shape">
            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal">
                <TextView android:id="@+id/textView_roomtemp_bedroom"
                          android:text="@string/unknown_temperature"
                          style="TemperatureMainScreen"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
                          android:textSize="@dimen/tempMainActivityFontSize"
                          android:layout_gravity="center_horizontal"/>
                <TextView android:id="@+id/textView_roomtemp_upperlobby"
                          android:text="@string/unknown_temperature"
                          style="TemperatureMainScreen"
