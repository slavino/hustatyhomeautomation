                          android:text="@string/roomname_upperlobby"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:textStyle="bold"
                          android:textSize="@dimen/roomNameMainActivityFontSize"
                          android:layout_gravity="center_horizontal"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:layout_gravity="center_horizontal"></TextView>
                <TextView
                        android:layout_gravity="center_horizontal"></TextView>
            </TableRow>
            <TableRow
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_column="0">
                <TextView android:id="@+id/textView_roomtemp_workroom"
                          android:text="@string/unknown_temperature"
                          style="TemperatureMainScreen"
                          android:layout_height="wrap_content"
                          android:layout_width="fill_parent"
